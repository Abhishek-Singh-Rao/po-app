<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <SelectDialog
    id="poDescDialog"
    title="Select PO Description"
    noDataText="No Purchase Orders found"
    search="onPODescriptionSearch"
    confirm="onPODescriptionConfirm"
    cancel="onPODescriptionCancel"
    contentWidth="50%"
    items="{
        path: '/PurchaseOrder',
        sorter: { path: 'Description' }
    }"
    multiSelect="true">
    <StandardListItem
      title="{Description}"
      description="{ID}" />
  </SelectDialog>
</core:FragmentDefinition>

